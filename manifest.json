{
  "manifest_version": 3,
  "name": "Stremio Movie Search",
  "version": "1.8",
  "description": "Stremio Movie Search enhances your Google, DuckDuckGo, IMDb, and Trakt.tv experience by adding a Stremio icon next to movie/show titles. With one click, you can jump straight to the Stremio app or web to stream your favorite content.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://duckduckgo.com/*",
        "*://www.imdb.com/title/*",
        "*://trakt.tv/movies/*",
        "*://trakt.tv/shows/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "96": "icons/stremio.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/stremio.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{64b29e50-64c6-402e-9c7b-71faadd6f2a6}"
    }
  }
}